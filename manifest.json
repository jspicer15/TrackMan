{
	"manifest_version": 2,

	"name": "Trackman",
	"description": "Allows you to track packages in a simple extension",
	"version": "1.0",

	"icons": 
	{
		"48": "icon.png"
	},
	"browser_action":
	{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": 
	[
		"tabs", "<all_urls>"
	],
	"background":
	{
		"scripts": ["background.js"],
		"persistent": false
	}
}
